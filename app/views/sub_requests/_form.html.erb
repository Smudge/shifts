<% javascript 'jrails', 'jquery', 'jquery-ui', 'jquery.tokeninput' %>
<% stylesheet 'tokeninput-facebook' %>

<% form_for (params[:id] ? @sub_request : [:shift, @sub_request]) do |f| %>
  <%= f.error_messages %>

  <p><h3>Time that you need someone to take for this sub request:</h3></p>
  <p>
    <%= f.label "Start" %><br />
    <%= f.datetime_select :mandatory_start, :default => @sub_request.shift.start %>
  </p>
  <p>
    <%= f.label "End" %><br />
    <%= f.datetime_select :mandatory_end, :default => @sub_request.shift.end %>
  </p>
  <p><h3>Maximum amount of time you're willing to give up (bribe):</h3></p>
  <p>
    <%= f.label :start %><br />
    <%= f.datetime_select :start, :default => @sub_request.shift.start %>
  </p>
  <p>
    <%= f.label :end %><br />
    <%= f.datetime_select :end, :default => @sub_request.shift.end %>
  </p>
  <p>
    <%= label_tag "People/groups eligible for this sub" %><br />
    <%= tokenized_users_autocomplete(@sub_request, "user_sources", "list_of_logins") %>
  </p>
  <p>
    <%= f.label :reason %><br />
    <%= f.text_field :reason %>
  </p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

