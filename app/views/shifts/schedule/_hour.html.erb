<li style="width: <%= 100/@hours_per_day.to_f %>%; left: <%= hour_counter*100/@hours_per_day.to_f%>%;" >
  <div class="hours" id="<%= "first" if hour_counter == 0 %>" >
    <div class="center_container">
      <div class="center_content">
        <%=(Time.now.beginning_of_day + hour.hours).strftime("%l:%M%p")%>
      </div>
    </div>
  </div>
  <%= render :partial => "shifts/schedule/minutes", :collection => 0...(@blocks_per_hour-1) %>
</li>
