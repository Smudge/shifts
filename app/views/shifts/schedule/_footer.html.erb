<div class="table_bottom" style="clear:both">
  <div class="shift_links">
    <div class="last_week">
      <%= link_to "&lt;&lt; Earlier", :date => (@period_start - @days_per_period), :anchor => @period_start - 1  %>
    </div>
    <div class="next_week">
      <%= link_to "Later &gt;&gt;", :date => (@period_start + @days_per_period), :anchor => @period_start + (2*@days_per_period) - 1 %>
    </div>
  </div>
  <div class="week_title">
    <%= @period_start.to_s(:just_date_long) %> to <%= (@period_start + @days_per_period - 1).to_s(:just_date_long) %>
  </div>
</div>