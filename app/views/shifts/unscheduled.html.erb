<% title "New Shift" %>

<% form_for @shift do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :location %><br />
    <%= select_tag 'shift[location_id]', option_groups_from_collection_for_select(@department.loc_groups, :locations, :name, :id, :name)%><br />
  </p>
  <%= f.hidden_field :scheduled, :value => :false %>
  <p><%= f.submit "Submit" %></p>
<% end %>

<p><%= link_to "Back to List", shifts_path %></p>

