<% content_for :head do %>
  <% stylesheet 'thickbox', 'notice', 'shift', 'tokeninput-facebook', 'application' %>
  <% javascript 'jrails', 'jquery', 'jquery-ui', 'thickbox-compressed', 'jquery.tokeninput', 'checkboxtest' %>
<% end %>

<% content_for :left_nav do %>
  <ul id="navigationList">
 <li><%= link_to_remote 'Post a new notice', :url => new_notice_path + '?height=700&width=600', 
                                             :title => "Create New Notice",
                                             :html => {:class => "thickbox", :href => new_notice_path} %>
  </li>
    <% if current_user.is_admin_of?(current_department) %>
      <li><%= link_to 'Notice archive', archive_notices_path %></li>
    <% end %>
  </ul>
  <div id="contentNav">
<% end %>


<% content_for :body do %>

  <%= yield %>

  <div class="clear"></div>
<% end -%>

<%= render :file => "layouts/application.html.erb" %>

